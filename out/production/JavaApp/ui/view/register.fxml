<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.controller.RegisterController"
      alignment="CENTER"
      spacing="20"
      prefWidth="400"
      prefHeight="400"
      styleClass="root">

    <Label text="Регистрация" styleClass="title"/>

    <TextField fx:id="usernameField" promptText="Имя пользователя"/>
    <PasswordField fx:id="passwordField" promptText="Пароль"/>
    <Button text="Зарегистрировать" onAction="#registerUser" styleClass="primary-button"/>

</VBox>
