<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.controller.MainMenuController"
      alignment="CENTER"
      spacing="15"
      prefWidth="500"
      prefHeight="600"
      styleClass="container">

    <Label fx:id="welcomeLabel" text="Панель управления пользователями" styleClass="title"/>

    <Button fx:id="loginBtn" text="🔐 Войти" onAction="#openLogin" styleClass="button"/>
    <Button fx:id="logoutBtn" text="🚪 Выйти" onAction="#logout" styleClass="button" visible="false" managed="false"/>

    <Button fx:id="registerBtn" text="➕ Регистрация" onAction="#openRegister" styleClass="button"/>
    <Button fx:id="usersBtn" text="👥 Список пользователей" onAction="#openUsers" styleClass="button"/>
    <Button fx:id="roomsBtn" text="🏠 Просмотр номеров" onAction="#openRooms" styleClass="button"/>
</VBox>
