<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.controller.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="400"
      prefHeight="400"
      styleClass="root">

    <Label text="Вход в систему" styleClass="title"/>
    <TextField fx:id="usernameField" promptText="Имя пользователя" styleClass="text-field"/>
    <PasswordField fx:id="passwordField" promptText="Пароль" styleClass="password-field"/>
    <Button text="Войти" onAction="#loginUser" styleClass="button"/>
</VBox>
